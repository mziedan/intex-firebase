{
  "name": "full-stack-project",
  "version": "1.0.0",
  "description": "Full-stack project with React frontend and Node.js/Express backend",
  "main": "backend/index.js",
  "scripts": {
    "start": "node backend/index.js",
    "server": "nodemon backend/index.js",
    "client": "cd src && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd src && npm install",
    "install-server": "cd backend && npm install",
    "install-all": "concurrently \"npm run install-client\" \"npm run install-server\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}